# ~/.zshrc – improved and commented

# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# Oh-My-Zsh configuration path
export ZSH="$HOME/.oh-my-zsh"

# Theme selection: Powerlevel10k for advanced features and performance
ZSH_THEME="powerlevel10k/powerlevel10k"

# Plugins (keep minimal for performance)
plugins=(
  git
  zsh-autosuggestions
  zsh-syntax-highlighting
  fzf
  sudo
  extract
)

# Source Oh-My-Zsh
source $ZSH/oh-my-zsh.sh

# fzf-git integration (extra git-aware pickers for fzf) — load after OMZ
if [ -f "$HOME/.config/fzf-git/fzf-git.sh" ]; then
  source "$HOME/.config/fzf-git/fzf-git.sh"
fi

# forgit: fzf-based git helpers — load after OMZ
if [ -f "$HOME/.config/forgit/forgit.plugin.zsh" ]; then
  source "$HOME/.config/forgit/forgit.plugin.zsh"
fi

# --- Ripgrep + fzf content search ---
fuzzy-rg() {
  local query="$1"
  if [[ -z "$query" ]]; then
    echo "Usage: fuzzy-rg <search-query>"
    return 1
  fi
  
be  local rg_prefix="rg --column --line-number --no-heading --color=always --smart-case"
  local result
  result=$(
    $rg_prefix "$query" |
    fzf --ansi \
        --delimiter : \
        --preview 'bat --color=always --highlight-line {2} {1}' \
        --preview-window '~3,+{2}-10'
  ) || return
  local file=$(echo "$result" | cut -d: -f1)
  local line=$(echo "$result" | cut -d: -f2)
  ${EDITOR:-nano} +${line} "$file"
}

# --- Git grep + fzf (only tracked files) ---
fuzzy-git-grep() {
  local query="$1"
  if [[ -z "$query" ]]; then
    echo "Usage: fuzzy-git-grep <search-query>"
    return 1
  fi
  
  local result
  result=$(
    git grep --line-number --color=always -I "$query" |
    fzf --ansi \
        --delimiter : \
        --preview 'bat --color=always --highlight-line {2} {1}' \
        --preview-window '~3,+{2}-10'
  ) || return
  local file=$(echo "$result" | cut -d: -f1)
  local line=$(echo "$result" | cut -d: -f2)
  ${EDITOR:-nano} +${line} "$file"
}

# --- Keybindings ---
# Ctrl+F -> ripgrep search (interactive)
bindkey -s '^F' 'vared -p "Search with ripgrep: " query; fuzzy-rg "$query"\n'

# Alt+F -> git grep search (interactive)
bindkey -s '^[f' 'vared -p "Search with git grep: " query; fuzzy-git-grep "$query"\n'

# Zoxide initialization (smart cd replacement)
if command -v zoxide >/dev/null 2>&1; then
  eval "$(zoxide init zsh)"
fi

# User-defined configuration

# Preferred editor (uncomment and adjust if desired)
export EDITOR="nano"

# Compilation flags (uncomment if needed)
# export ARCHFLAGS="-arch x86_64"

# Enhanced History Configuration
HISTFILE=$HOME/.zhistory
SAVEHIST=1000
HISTSIZE=999
setopt share_history
setopt hist_expire_dups_first
setopt hist_ignore_dups
setopt hist_verify

# Better keybindings for history search
bindkey '^[[A' history-search-backward
bindkey '^[[B' history-search-forward

# Useful Aliases
alias zshconfig="nano ~/.zshrc"
alias reloadzsh="source ~/.zshrc"

# Search aliases
alias rg="fuzzy-rg"
alias gg="fuzzy-git-grep"

# Use batcat when bat is unavailable (Debian/Ubuntu package installs `batcat`)
if command -v batcat >/dev/null 2>&1 && ! command -v bat >/dev/null 2>&1; then
  alias bat="batcat"
fi

# Eza aliases (modern ls replacement - updated from exa)
if command -v eza >/dev/null 2>&1; then
  alias ls="eza --icons=always"
  alias ll="eza -l"
  alias la="eza -la"
  alias lt="eza --tree"
  alias lta="eza --tree -a"
  alias ltg="eza --tree --git-ignore"
  alias llg="eza -l --git"
elif command -v exa >/dev/null 2>&1; then
  # Fallback to exa if eza not available
  alias ls="exa"
  alias ll="exa -l"
  alias la="exa -la"
  alias lt="exa --tree"
  alias lta="exa --tree -a"
  alias ltg="exa --tree --git-ignore"
  alias llg="exa -l --git"
fi

# Navigation aliases (simple and safe)
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~"
alias -- -="cd -"

# Zoxide utility aliases (if available)
if command -v zoxide >/dev/null 2>&1; then
  alias cd="z"
  alias za="zoxide add"
  alias zr="zoxide remove"
  alias zq="zoxide query"
fi

# Advanced FZF Configuration with fd integration
if command -v fzf >/dev/null 2>&1; then
  # Set up fzf key bindings and fuzzy completion
  # Note: FZF key bindings are handled by Oh-My-Zsh fzf plugin
  
  # FZF theme colors
  fg="#CBE0F0"
  bg="#011628"
  bg_highlight="#143652"
  purple="#B388FF"
  blue="#06BCE4"
  cyan="#2CF9ED"
  
  export FZF_DEFAULT_OPTS="--color=fg:${fg},bg:${bg},hl:${purple},fg+:${fg},bg+:${bg_highlight},hl+:${purple},info:${blue},prompt:${cyan},pointer:${cyan},marker:${cyan},spinner:${cyan},header:${cyan}"
  
  # Use fd instead of find for faster file finding
  if command -v fd >/dev/null 2>&1; then
    export FZF_DEFAULT_COMMAND="fd --hidden --strip-cwd-prefix --exclude .git"
    export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
    export FZF_ALT_C_COMMAND="fd --type=d --hidden --strip-cwd-prefix --exclude .git"
    
    # Use fd for completion
    _fzf_compgen_path() {
      fd --hidden --exclude .git . "$1"
    }
    
    _fzf_compgen_dir() {
      fd --type=d --hidden --exclude .git . "$1"
    }
  fi
  
  # Advanced preview configuration
  show_file_or_dir_preview="if [ -d {} ]; then eza --tree --color=always {} | head -200; else bat -n --color=always --line-range :500 {}; fi"
  export FZF_CTRL_T_OPTS="--preview '$show_file_or_dir_preview'"
  export FZF_ALT_C_OPTS="--preview 'eza --tree --color=always {} | head -200'"
  
  # Advanced customization of fzf options via _fzf_comprun function
  _fzf_comprun() {
    local command=$1
    shift
    
    case "$command" in
      cd) fzf --preview 'eza --tree --color=always {} | head -200' "$@" ;;
      export|unset) fzf --preview "eval 'echo \${}'" "$@" ;;
      ssh) fzf --preview 'dig {}' "$@" ;;
      *) fzf --preview "$show_file_or_dir_preview" "$@" ;;
    esac
  }
fi

